<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.gms.maps.MapView
                android:background="#939393"
                android:id="@+id/mapView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
            <LinearLayout
                android:background="#2700A5FF"
                android:id="@+id/loading222"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ProgressBar>
            </LinearLayout>
        </RelativeLayout>




    </LinearLayout>


    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/clock_btn"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <com.airbnb.lottie.LottieAnimationView

            android:backgroundTintMode="src_in"
            app:lottie_colorFilter="@color/primaryTextColor"
            android:id="@+id/animationView"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:gravity="center"

            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <com.airbnb.lottie.LottieAnimationView

            android:backgroundTintMode="src_in"
            app:lottie_colorFilter="@color/primaryTextColor_orange"
            android:id="@+id/animationView2"
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:gravity="center"

            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/clock_status"
            android:gravity="center"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:textColor="@color/white"
            android:text="Clock in"
            android:layout_width="360dp"
            android:layout_height="360dp">

        </TextView>

        <TextView

            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginTop="200dp"
            android:fontFamily="@font/montserrat_alternates"
            android:textColor="#000000"
            android:text="Long press for action"
            android:layout_width="360dp"
            android:layout_height="360dp"/>

    </RelativeLayout>
    
    
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/clock_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
       <TextView
           android:id="@+id/clock_msg"
           android:textColor="#4E4E4E"
           android:fontFamily="@font/montserrat_alternates_medium"
           android:textSize="14sp"
           android:gravity="center"
           android:textStyle="bold"
           android:text="Clocked In"
           android:visibility="visible"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/time"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/montserrat_alternates_bold"
            android:textSize="29sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="12:11 AM"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/clock_msg2"
            android:textColor="#4E4E4E"
            android:fontFamily="@font/montserrat_alternates_medium"
            android:textSize="17sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Tracking your location"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>
    



</LinearLayout>